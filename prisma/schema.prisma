generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String     @id @default(cuid())
  email          String     @unique
  passwordHash   String
  name           String?
  role           String     @default("visitor") // "visitor", "user", "admin"
  emailVerified  Boolean    @default(false)
  emailToken     String?    @unique
  emailTokenExpiry DateTime?
  teamMemberId   String?    @unique
  teamMember     TeamMember? @relation(fields: [teamMemberId], references: [id])
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
}

model Article {
  id          String    @id @default(cuid())
  title       String
  slug        String    @unique
  excerpt     String
  content     String
  coverImage  String?
  author      String
  division    String
  tags        String    @default("")
  featured    Boolean   @default(false)
  published   Boolean   @default(false)
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model TeamMember {
  id          String  @id @default(cuid())
  name        String
  title       String  @default("")
  role        String  @default("")
  division    String
  program     String?
  year        String?
  bio         String?
  linkedin    String?
  headshot    String?
  isExecutive Boolean @default(false)
  order       Int     @default(0)
  user        User?
}

model Holding {
  id           String        @id @default(cuid())
  ticker       String        @unique
  assetType    String
  quantity     Float
  costBasis    Float?
  entryDate    DateTime      @default(now())
  notes        String?
  sector       String?
  region       String?
  strategyTag  String?
  visible      Boolean       @default(true)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  transactions Transaction[]
}

model Transaction {
  id        String   @id @default(cuid())
  holdingId String
  type      String
  quantity  Float
  price     Float
  fees      Float    @default(0)
  date      DateTime @default(now())
  notes     String?
  createdAt DateTime @default(now())
  holding   Holding  @relation(fields: [holdingId], references: [id], onDelete: Cascade)
}

model ContactSubmission {
  id        String   @id @default(cuid())
  firstName String
  lastName  String
  email     String
  message   String
  status    String   @default("NEW")
  createdAt DateTime @default(now())
}

model MarketData {
  id            String   @id @default(cuid())
  ticker        String   @unique
  price         Float
  change        Float
  changePercent Float
  volume        Int
  lastUpdated   DateTime @default(now())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Settings {
  id          String   @id @default(cuid())
  key         String   @unique
  value       String
  description String?
  updatedAt   DateTime @updatedAt
}

model Investment {
  id              String   @id @default(cuid())
  type            String   // "thesis" or "outlook"
  title           String
  company         String?
  ticker          String?
  year            String   // Year as string to allow any year
  season          String   // "Fall", "Winter", "Summer"
  content         String   // Full thesis/outlook content
  thesis          String?  // Why we invested
  entryDate       DateTime?
  priceAtEntry    Float?
  initialTarget   Float?   // Price target when invested
  currentTarget   Float?   // Current price target
  exitPrice       Float?   // Price when position was exited
  active          Boolean  @default(true) // Whether position is still active
  publishDate     DateTime? // When to publish/display on holdings
  tags            String   // Comma-separated: "Equity", "Macro", "Investment Strategy"
  coverImage      String?  // Cover image URL
  published       Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model StrategyDocument {
  id              String   @id @default(cuid())
  type            String   // "investment_strategy" or "industry_report"
  title           String
  year            String   // Year as string
  content         String   // Full document content (markdown)
  executiveSummary String? // Brief summary for display
  industries      String?  // Comma-separated industries covered
  sectors         String?  // Comma-separated sectors covered
  coverImage      String?  // Cover image URL
  documentFile    String?  // PDF document URL if uploaded
  published       Boolean  @default(false)
  publishDate     DateTime? // When to publish/display
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model CalendarEvent {
  id          String   @id @default(cuid())
  title       String
  description String?
  startDate   DateTime
  endDate     DateTime?
  allDay      Boolean  @default(false)
  location    String?
  category    String   // "quant_trading", "quant_research", "macro", "equity"
  subcategory String?  // For macro/equity: "financials", "consumer", "energy", "healthcare", "macro_technology"
  priority    String   @default("medium") // "low", "medium", "high", "urgent"
  status      String   @default("scheduled") // "scheduled", "in_progress", "completed", "cancelled"
  attendees   String?  // Comma-separated user IDs
  createdBy   String   // User ID who created the event
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model WeeklyContent {
  id           String   @id @default(cuid())
  title        String
  category     String   // "news", "learning"
  year         String   // Year as string
  season       String   // "winter", "summer", "fall"
  week         Int      // Week number 1-52
  description  String?
  contentType  String   @default("pdf") // "pdf" or "markdown"
  content      String?  // Markdown content when contentType is "markdown"
  documentFile String?  // PDF file URL
  published    Boolean  @default(false)
  publishDate  DateTime? // When to publish
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model InvestmentPitch {
  id          String   @id @default(cuid())
  title       String
  company     String?
  sector      String   // "macro", "equity"
  subcategory String?  // For macro/equity subsectors
  pitchDate   DateTime
  description String?
  documentFile String? // PDF file URL
  published   Boolean  @default(false)
  publishDate DateTime? // When to publish
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model JobPosting {
  id           String   @id @default(cuid())
  title        String
  description  String
  team         String   // "quant_trading", "quant_research", "macro", "equity"
  endDate      DateTime
  published    Boolean  @default(false)
  documentFile String?  // PDF document URL
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  applications JobApplication[]
}

model JobApplication {
  id            String     @id @default(cuid())
  jobPostingId  String
  name          String
  email         String
  resumeFile    String?    // Resume file URL
  appliedAt     DateTime   @default(now())

  jobPosting    JobPosting @relation(fields: [jobPostingId], references: [id], onDelete: Cascade)
}
